<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listViewActivityMainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:layout_marginHorizontal="32dp"
    tools:context=".ListViewActivity">

    <EditText
        android:id="@+id/randomTextsCountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="14sp"
        android:hint="@string/generate_random_texts_count_hint"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate_random_texts_button_text"
        android:onClick="onGenerateRandomTextsButtonClicked"/>

    <TextView
        android:id="@+id/randomTextTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/randomTextsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>