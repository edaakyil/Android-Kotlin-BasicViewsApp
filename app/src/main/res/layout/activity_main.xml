<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.edaakyil.android.kotlin.app.basicviews.MainActivity"/>

        <variable name="activity" type="MainActivity"/>
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainActivityMainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        tools:context=".MainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/spinner_with_legacy_page_button_text"
            android:onClick="@{_ -> activity.onSpinnerWithLegacyPageButtonClicked()}" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/spinner_with_binding_page_button_text"
            android:onClick="@{_ -> activity.onSpinnerWithBindingPageButtonClicked()}" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/listview_with_legacy_page_button_text"
            android:onClick="@{_ -> activity.onListViewWithLegacyPageButtonClicked()}" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/listview_with_binding_page_button_text"
            android:onClick="@{_ -> activity.onListViewWithBindingPageButtonClicked()}" />

    </LinearLayout>
</layout>